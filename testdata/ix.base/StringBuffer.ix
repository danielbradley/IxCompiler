public class // StringBuffer
{
	@data : Array*
	@name : string* = "XXX"
	@ref  : string&
}

public new()
{
	@data = new char[];
}

public append_char( ch : char )
{
	@data[] = ch;
}

public append_stringref( aString : string& )
{
	foreach( character in aString )
	{
		@data[] = character;
	}
}

public append_string( aString : string* )
{
	foreach( character in aString )
	{
		@data[] = character;
	}
	delete aString;
}

public append_float( aValue : float )
{
	this.append( Number.convertToString( aValue ) );
}

public const charAt( i : int ) : char
{
	return @data[i];
}

public const getLength() : int
{
	return @data.length;
}
